{
    "telemetry.telemetryLevel": "off",
    "editor.fontFamily": "'Source Code Pro', 'monospace', monospace",
    "editor.wordWrap": "on",
    "tabnine.experimentalAutoImports": true,
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.formatting": "clangFormat",
    "editor.formatOnSave": true,
    "workbench.iconTheme": "vscode-icons",
    "cmake.configureOnOpen": true,
    "editor.foldingHighlight": false,
    "editor.guides.bracketPairs": true,
    "editor.renderFinalNewline": "off",
    "intelephense.format.braces": "allman",
    "cmake.generator": "Unix Makefiles",
    "C_Cpp.default.mergeConfigurations": true,
    "editor.guides.indentation": false,
    "editor.wrappingIndent": "indent",
    "editor.mouseWheelZoom": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "editor.stickyTabStops": true,
    "editor.inlayHints.enabled": "on",
    "C_Cpp.intelliSenseEngine": "Disabled",
    "vsicons.dontShowNewVersionMessage": true,
    "editor.minimap.enabled": false,
    "markyMarkdown.statsShowCharacters": true,
    "markyMarkdown.statsShowReadingTime": false,
    "markyMarkdown.statsShowWords": true,
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.codeAnalysis.clangTidy.args": [
        "--p=c++17"
    ],
    "python.diagnostics.sourceMapsEnabled": true,
    "python.formatting.provider": "yapf",
    "python.languageServer": "Pylance",
    "python.linting.mypyPath": "~/.local/bin/mypy",
    "python.linting.mypyEnabled": true,
    "git.suggestSmartCommit": false,
    "editor.fontSize": 15,
    "git.openRepositoryInParentFolders": "never",
}